<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tbp.honeyjar.comment.dao.CommentMapper">

    <resultMap id="commentListResultMap" type="com.tbp.honeyjar.comment.dto.CommentListDTO">
        <id property="commentId" column="comment_id"/>
        <!--        <result property="profileImg" column=""/>-->
        <result property="comment" column="comment"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="postId" column="post_id"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <select id="findAllComment" resultMap="commentListResultMap">
        SELECT
        COMMENT_ID
        , COMMENT
        , CREATED_AT
        , UPDATED_AT
        , POST_ID
        , USER_ID
        FROM
        COMMENT
        ORDER BY CREATED_AT
    </select>

    <insert id="registComment" parameterType="com.tbp.honeyjar.comment.dto.CommentListDTO">
        INSERT INTO COMMENT
        (
        , COMMENT_ID
        , COMMENT
        , CREATED_AT
        , UPDATED_AT
        , POST_ID
        , USER_ID
        )
        VALUES
        (
        #{ commentId }
        ,  #{ comment }
        ,  #{ createdAt }
        ,  #{ updatedAt }
        ,  #{ postId }
        ,  #{ userId }
        )
    </insert>

</mapper>