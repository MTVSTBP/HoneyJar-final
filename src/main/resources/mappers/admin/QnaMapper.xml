<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tbp.honeyjar.admin.dao.QnaMapper">

    <resultMap id="adminQnaListResultMap" type="com.tbp.honeyjar.admin.dto.qna.QnaListResponseDto">
        <id property="id" column="qna_id"/>
        <result property="title" column="title"/>
        <result property="post" column="post"/>
        <result property="categoryId" column="category_id"/>
    </resultMap>

    <resultMap id="adminQnaResultMap" type="com.tbp.honeyjar.admin.dto.qna.QnaResponseDto">
        <id property="id" column="qna_id"/>
        <result property="title" column="title"/>
        <result property="post" column="post"/>
        <result property="categoryId" column="category_id"/>
    </resultMap>

    <select id="findAllQna" resultMap="adminQnaListResultMap">
        select
        qna_id,
        title,
        post,
        category_id
        from qna
        order by qna_id
    </select>

    <select id="findById" resultMap="adminQnaResultMap">
        select
        qna_id,
        title,
        post,
        category_id
        from qna
        where qna_id = #{id}
    </select>

    <insert id="save" parameterType="com.tbp.honeyjar.admin.dto.qna.QnaSaveRequestDto">
        insert into qna
        (
        title,
        post,
        category_id,
        user_id,
        created_at,
        updated_at
        )
        values
        (
        #{title},
        #{post},
        #{categoryId},
        #{userId},
        #{createdAt},
        #{updatedAt}
        )
    </insert>
</mapper>