<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tbp.honeyjar.login.mapper.user.UserRefreshTokenMapper">

    <select id="findByUserId" parameterType="String" resultType="com.tbp.honeyjar.login.entity.user.UserRefreshToken">
        SELECT * FROM user_refresh_token WHERE user_id = #{userId}
    </select>

    <select id="findByEmail" parameterType="String" resultType="com.tbp.honeyjar.login.entity.user.UserRefreshToken">
        SELECT URT.*
        FROM user_refresh_token URT
                 JOIN user U ON URT.user_id = U.user_id
        WHERE U.email = #{email}
    </select>

    <insert id="insertUserRefreshToken" parameterType="com.tbp.honeyjar.login.entity.user.UserRefreshToken">
        INSERT INTO user_refresh_token (user_id, refresh_token) VALUES (#{userId}, #{refreshToken})
    </insert>

    <update id="updateUserRefreshToken" parameterType="com.tbp.honeyjar.login.entity.user.UserRefreshToken">
        UPDATE user_refresh_token SET refresh_token = #{refreshToken} WHERE user_id = #{userId}
    </update>

    <delete id="deleteUserRefreshToken" parameterType="String">
        DELETE FROM user_refresh_token WHERE user_id = #{userId}
    </delete>
</mapper>