<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tbp.honeyjar.login.mapper.user.UserMapper">
    <select id="findByUserId" parameterType="long" resultType="com.tbp.honeyjar.login.entity.user.User">
        SELECT *
        FROM user
        WHERE user_id = #{userId}
    </select>

    <select id="findByKakaoId" resultType="com.tbp.honeyjar.login.entity.user.User">
        SELECT *
        FROM user
        WHERE kakao_id = #{kakaoId}
    </select>

    <insert id="insertUser" parameterType="com.tbp.honeyjar.login.entity.user.User" useGeneratedKeys="true"
            keyProperty="userId">
        INSERT INTO user (kakao_id, pr, name, created_at, updated_at, user_status)
        VALUES (#{kakaoId}, #{pr}, #{name}, NOW(), NOW(), true)
    </insert>

    <update id="updateUser" parameterType="com.tbp.honeyjar.login.entity.user.User">
        UPDATE user
        SET name       = #{name},
            pr         = #{pr},
            updated_at = NOW()
        WHERE user_id = #{userId}
    </update>
</mapper>